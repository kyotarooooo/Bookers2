<h1>User info</h1>

<%= form_for(@user) do |f| %>
	<h4>name</h4>
	<%= f.text_field :username %>

	<h4>Image</h4>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

	<h4>Introduction</h4>
	<%= f.text_area :introduction %>

	<%= f.submit 'Create Book' %>
<% end %>
