<div class="signup-box">

<h2>Sign up</h2>

<%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
         <div class="signup-box2"><%= f.label :username %><br />
             <%= f.text_field :username %></div>

             <div class="signup-box2"><%= f.label :email %><br />
             <%= f.email_field :email %></div>

         <div class="signup-box2"><%= f.label :password %>(6 characters minimum)<br />
             <%= f.password_field :password %></div>

         <div class="signup-box2"><%= f.label :password_confirmation %><br />
             <%= f.password_field :password_confirmation %></div>

             <button class="btn btn-success"><% f.submit "Sign up" %>Sign up</button>
    <% end %>

<%= render "devise/shared/links" %>
</div>