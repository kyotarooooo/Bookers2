<div class="container">
	<div class="row sampleRow">
		<div class="col-xs-3">
			<%= render 'books/list2', user: @book.user %>
			<%= render 'books/list', book: @new_book %>
		</div>



		<div class="col-xs-9">
			<h1>Books detail</h1>

			<% if @book.user == current_user %>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>opinion</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
					<tr>
						<td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, class: "user-image2", fallback: "noimage.png" %></td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
						<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
					</tr>
				</tbody>
			</table>
			<% else %>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>opinion</th>
					</tr>
				</thead>
					<tr>
						<td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, class: "user-image2", fallback: "noimage.png" %></td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
					</tr>
				</tbody>
			</table>
			<% end %>
		</div>
	</div>
</div>
