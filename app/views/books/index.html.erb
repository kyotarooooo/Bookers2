<% if flash[:error].present?   %>
<%# byebug %>

	<div class="form-error">
		<%= flash[:error] %>
	</div>

<%# flash[:error]="" %>
<% end %>

<div class="container">
	<div class="row sampleRow">
		<div class="col-xs-3">
			<%= render 'books/list2', user: @user %>
			<%= render 'books/list', book: @new_book %>
		</div>

	<div class="col-xs-9">
		<h1>Books</h1>
		<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>opinion</th>
					</tr>
				</thead>
			<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, class: "user-image2", fallback: "noimage.png" %></td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
				</tbody>
			<% end %>
		</table>
	</div>
	</div>
</div>