<h1>Books</h1>

<%= @books.each do |book| %>
	<p>title</p>
	<span> <%= book.title %></span>
	<p>opinion</p>
	<span> <%= book.body %></span>
<% end %>





<%= form_for(@book) do |f| %>

	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>opinion</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>
