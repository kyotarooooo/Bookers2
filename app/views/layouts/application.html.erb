<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="top-title">Bookers</p>
    </div>

    <div class="navbar-collapse" id="navbarEexample7">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>

          <li><%= link_to "Home", user_path(current_user), class: "glyphicon glyphicon-home" %>
          </li>
          <li><%= link_to "Users", users_path, class: "glyphicon glyphicon-user" %>
          </li>
          <li><%= link_to "Books", books_path, class: "glyphicon glyphicon-book" %>
          </li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %>
          </li>
          <li>
            <%= link_to "About", "/home/about", class: "glyphicon glyphicon-link" %>
          </li>
          <li>
            <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
          </li>
          <li>
            <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

  </head>

  <body>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
